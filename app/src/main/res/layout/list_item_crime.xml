<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/list_item_crime_solved_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/list_item_crime_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/crime_solved_checkbox"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Crime #1"/>
    <TextView
        android:id="@+id/list_item_crime_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/crime_solved_checkbox"
        android:layout_below="@id/list_item_crime_title_text"
        android:padding="4dp"
        tools:text="2017/10/10 19:30 EST"/>


</RelativeLayout>